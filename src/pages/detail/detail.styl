.wrapper-detail
  background-color #faf8f8
  padding 41px 0 30px
  min-height 100vh
  .ticket-wrap  
    .slot
      width 340px
      height 8PX
      border 1px solid #bcbcbc
      border-radius 4PX
      margin 0 auto
      box-shadow inset 0px 4px 7px 0px rgba(0, 0, 0, 0.27)
    .ticket
      width 287px
      margin 0 auto
      transform translateY(-4PX)
      .ticket-content
        border-radius 0 0 9px 9px 
        padding 35px 21px 40px
        width 245px
        background-color #ffffff
        box-shadow: 0px 4px 18px 0px rgba(0, 0, 0, 0.2);
        border-bottom 2px dashed #faf8f8;        
        .top-wrap
          display flex
          padding-bottom 21px
          border-bottom 2px dashed #8b8b8b
          .img  
            flex 0 0 78px
            width 78px
            height 109px
            img
              height 100%
              width 100%
          .title-wrap
            margin-left 18px
            flex 1 0 150px
            .title
              font-size: 16px;
              letter-spacing: 1px;
              color: #333131;
            .vice-title
              margin-top 8px
              font-size: 12px;
              letter-spacing: 0px;
              color: #666464;
        .middle-wrap
          padding 14px 0
          border-bottom 1px dashed #8b8b8b
          .line 
            display flex
            justify-content space-between
            .item
              flex 1 1 50%
              &:nth-of-type(2)
                text-align right
              .name
                font-size: 10px;
                color: #999999;
              .content
                font-size: 12px;
                color: #656565;
            &:nth-of-type(2)
              margin-top 8px
        .bottom-wrap
          padding-top 16px
          font-size: 12px;
          letter-spacing: 1px;
          color: #333031;
      .ticket-vice
        box-shadow: 0px 4px 18px 0px rgba(0, 0, 0, 0.2);
        box-sizing border-box
        width 287px
        height 107px
        background #ffffff
        border-radius 9px
        // border-top 1px dashed black
        .join
          width 265px
          margin 0 auto
          border-top 2px dashed #faf8f8;
          line-height 107px
          text-align center
          color #ef8182
          letter-spacing 10px




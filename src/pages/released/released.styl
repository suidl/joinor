.wrapper-released
  box-sizing border-box
  background #faf8f8
  padding 32px 25px
  min-height 100vh
  .release-list
    .release-item
      display flex
      justify-content space-between
      padding 18px 12px
      border-bottom 1px solid #979797
      &:nth-last-child(1)
        border none
      .poster
        flex 0 0 57px
        width 57px
        height 80px
        img 
          width 100%
          height 100%
      .info-wrap
        display flex
        flex-direction column
        justify-content space-between
        flex 1 1 auto
        margin-left 12px
        .title
          font-size: 16px;
          letter-spacing: 2px;
          color: #3b3b41;
        .time-loc
          .time, .location
            color #616165
            font-size 13px
      .icon
        display flex
        flex-direction column
        justify-content center
        flex 0 0 7px
        .iconfont
          color #ada8a9
  .tab
    position fixed
    bottom 0
    left 0
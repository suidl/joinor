.wrapper-enroll
  box-sizing border-box
  background #faf8f8
  padding 38px 30px 0
  min-height 100vh
  .enroll-list
    .enroll-item
      display flex
      margin-bottom 24px
      .main-ticket
        display flex
        position relative
        box-sizing border-box
        padding 12px 16px
        justify-content flex-start
        flex 0 0 72%
        width 72%
        background #ffffff
        border-radius 7px
        box-shadow 2px 4px 14px 0px rgba(0, 0, 0, 0.2)
        .mask
          box-sizing border-box
          position absolute
          z-index 10
          top 0 
          right 0
          width 12px
          height 100%
          padding 7px 0
          border-radius 0 7px 7px 0
          background #ffffff
          .border
            height 100%
            box-sizing border-box
            border-right 2px dashed #ecebf0
            transform translateX(1px)
        .poster
          width 38px
          height 53px
          img 
            width 100%
            height 100%
        .content-wrap
          display flex
          flex-direction column
          justify-content space-between
          margin-left 8px
          .title
            font-size 13px
            color #3b3b41
          .info-wrap
            .location, .time
              font-size 10px
              color #616165
      .vice-ticket
        display flex
        position relative
        z-index 0
        flex-direction column
        justify-content center
        flex 0 0 28%
        background-color #ffffff
        border-radius 7px
        box-shadow 2px 4px 14px 0px rgba(0, 0, 0, 0.2)
        .check
          text-align center
          color #ef8182
          font-size 12px
          letter-spacing 2px

          

color-head = #787880
color-title = #3b3b41
color-viceTitle = #858587
color-el = #616165
.wrapper
  .top-bg
    width 375px
    height 235px
    background-color #ADB4D5
    img 
      width 100%
      height 100%
  .bottom-wrap
    box-sizing border-box
    width 375px
    padding 78px 7vw 0
    background-color #faf8f8
    border-radius 18px 18px 0px 0px
    transform translateY(-45px)
    .content-ts
      position relative
      .head-wrap
        transform translateY(-268px)
        position absolute
        left 0
        right 0
        .header
          margin-top 24px
          display flex
          justify-content space-between
          .location
            .iconfont, .place
              font-size 14px
              color color-head
            .place 
              margin-left 4px
          .search
            .iconfont
              color color-head
              font-size 18px
        .banner-wrap
          .list-wrap
            margin-top 15px
            .banner-list
              display flex
              height 100%
              &.banner-with-transition
                transition transform .2s linear
              .banner-item
                flex 0 0 86vw
                background gray
                margin-right 8vw
                border-radius 7px
                height 190px
                overflow hidden
                img 
                  width 100%
                  height 100%
          .spot 
            margin-top 5px
            .spot-list
              display flex
              justify-content center
              .spot-item
                width 4px
                height 4px
                margin 0 1px
                background-color #bfbfbf
                border-radius 2px
                transition width .2s linear
                &.active
                  width 11px
      .activity-wrap
        // margin-top 78px
        .activity-list
          .activity-item
            .item-wrap
              display flex
              padding 16px 0
              border-bottom 1px solid #cdc9ca
              .left-img
                flex 0 0 75px
                height 105px
                background-color purple
                img 
                  height 100%
                  width 100%
              .right-info
                flex 1 0 200px
                margin-left 15px
                position relative
                display flex
                flex-direction column
                justify-content space-between
                .title-wrap
                  .title
                    font-size 16px
                    color color-title
                  .vice-title
                    font-size 14px
                    color color-viceTitle
                .else-wrap
                  .el-info
                    font-size 11px
                    color color-el
                .join
                  position absolute
                  bottom 0
                  right 0
                  width 54px
                  height 25px
                  border-radius 25px
                  background-image linear-gradient(135deg, #ff89a6 0%, #ca5752 100%)
                  color #ffffff
                  font-size 11px
                  line-height 25px
                  letter-spacing 1px
                  border none











